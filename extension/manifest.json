{
  "name": "Bitmovin API Explorer. Viewer, Formatter and Navigator for Bitmovin API JSON responses",
  "short_name": "BM-API-Explorer",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Extension to explore and navigate Bitmovin API reponses",
  "homepage_url": "https://github.com/wabiloo/BM-API-Explorer",
  "minimum_chrome_version": "35",
  "offline_enabled": true,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/32.png"
    },
    "default_title": "Bitmovin API Explorer",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "popup.html",
    "persistent": true
  },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["js/content.js"], "run_at": "document_start" }
  ],
  "permissions":["<all_urls>", "clipboardWrite", "tabs", "contextMenus"],
  "web_accessible_resources": [
    "resources/*bitmovin-api-mapping.json"
  ]
}